<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".ui.SelectedAgentActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/selected_agent_icon"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:padding="2dp" />

            <TextView
                android:id="@+id/selected_agent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@id/selected_agent_icon"
                android:textColor="@color/red_main_color"
                android:textSize="24sp"
                tools:text="KAY/O" />

            <TextView
                android:maxLines="4"
                android:ellipsize="end"
                android:layout_alignBottom="@id/selected_agent_icon"
                android:id="@+id/selected_agent_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/selected_agent_name"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@id/selected_agent_icon"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="Использующий бионические усиления швед Breach полагается на мощные направленные взрывы, чтобы расчистить путь от агентов противника. Разрушительная сила его умений позволяет получить решающее преимущество в любом бою." />

            <View
                android:background="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/selected_agent_icon"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="8dp" />
        </RelativeLayout>
</ScrollView>