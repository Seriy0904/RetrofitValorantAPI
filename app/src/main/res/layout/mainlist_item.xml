<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@color/main_color"
    android:padding="14dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mainlist_item_icon"
        android:layout_width="70sp"
        android:layout_height="70sp" />

    <TextView
        android:id="@+id/mainlist_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/mainlist_item_icon"
        android:fontFamily="@font/valorant_font"
        android:textColor="@color/red_main_color"
        android:textSize="20sp"
        tools:text="KillJoy" />

    <TextView
        android:id="@+id/mainlist_item_description"
        android:layout_width="match_parent"
        android:layout_height="46sp"
        android:layout_below="@id/mainlist_item_name"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@id/mainlist_item_icon"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="The bionic Swede Breach fires powerful, targeted kinetic blasts to aggressively clear a path through enemy ground. The damage and disruption he inflicts ensures no fight is ever fair." />
</RelativeLayout>