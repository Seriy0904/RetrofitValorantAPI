<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2dp"
    android:background="@color/main_color_lighter"
    android:padding="8dp">

    <ImageView
        android:id="@+id/abilityIcon"
        android:layout_width="80sp"
        android:layout_height="80sp"
        tools:background="@mipmap/ic_launcher" />

    <TextView

        android:visibility="invisible"
        android:gravity="center"
        android:textSize="60sp"
        android:textColor="@color/white"
        android:text="P"
        android:id="@+id/abilitySymbol"
        android:layout_width="80sp"
        android:layout_height="80sp" />

    <TextView
        android:id="@+id/abilityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_toEndOf="@id/abilityIcon"
        android:textColor="@color/red_main_color"
        android:textSize="20sp"
        tools:text="Шоковая стрела" />

    <TextView
        android:id="@+id/abilityDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/abilityName"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@id/abilityIcon"
        android:gravity="center|start"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:text="Шоковая стрела" />
</RelativeLayout>